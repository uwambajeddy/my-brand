<%- include('_header')%>
       
		<!--================Home Banner Area =================-->
		<section class="home_banner_area_lil">
			<div class="container">
			<div class="media">
                <div class="banner_content ">
                    <h2>Blogs</h2>
                    <div class="page_link">
                        <a href="/" class="page_link_a">Home</a>
                        <a href="/blogs">Blogs</a>
                    </div>
                </div>
					 </div>
				 
		 </div>
	 </section>
		<!--================Home Banner Area =================-->

         <!--================Blog Area =================-->
         <section class="blog_area">
            <div class="container">
                <div class="blog_area_content">
                    <div class="blog_area_content_a">
                        <div class="blog_left_sidebar">
                            <article class=" blog_item">
                               <div class="blog_item_a">
                               </div>
                               <% 
                               let date= `${blog.date}`.split(" ");%>
                                <div class="blog_item_b">
                                    <div class="blog_post">
                                        <img src="<%= blog.image.includes('http') ? blog.image : `/img/blog/${blog.image}` %>" alt="">
                                        <div class="blog_info">
                                            <ul class="blog_meta list">
                                                <li><a href="#"><%= date[0] %> <%= date[1] %> <%= date[2] %> <%= date[3] %><i class="lnr lnr-calendar-full"></i></a></li>
                                                <li><a href="#"><%= blog.likedBy.length%> Like<%= blog.likedBy.length>1 ? "s": ""%><i class="lnr lnr-heart"></i></a></li>
                                                <li><a href="#"><%= blog.comments.length%> Comment<%= blog.comments.length >1 ? "s": ""%><i class="lnr lnr-bubble"></i></a></li>
                                            </ul>
                                        </div>
                                        <div class="blog_details">
                                            <h2><%= blog.title %></h2>
                                            <p><%= blog.body %></p>
                                            
                                        </div>
                                    </div>
									<!--------------------------------------->
									<div class="single-post-area">
										<div class="navigation-area">

                                            <%
                                            const values = blogs.map(object => object._id.toJSON());
                                            let prevId = values.indexOf(blog._id.toJSON())-1;
                                            let nextId = values.indexOf(blog._id.toJSON()) +1;
                                            if(prevId >=0){ 
                                                let prevBlog= blogs[prevId];
                                                %>
												<div class=" nav-left ">
                                                    <a href="/blog/<%= prevBlog._id %>">
													<div class="thumb">
														<div class="arrow">
															<span class="lnr lnr-arrow-left"></span>
														</div>
													</div>
													
													<div class="detials">
														<p>Prev Post</p>
													    <h4> <%= prevBlog.title.slice(15) %>...</h4>
													</div>
                                                </a>
												</div>
                                                <% }%>

                                               <% if(nextId < blogs.length){ 
                                                    let nextBlog= blogs[nextId];
                                                    %>
												<div class="nav-right">
                                                    <a href="/blog/<%= nextBlog._id %>">
													<div class="detials">
														<p>Next Post</p>
                                                        <h4> <%= nextBlog.title.slice(0,15) %>...</h4>
													</div>
													
													<div class="thumb">
														<div class="arrow">
															<span class="lnr lnr-arrow-right"></span>
														</div>
													</div>	
                                                </a>									
												</div>	
                                                <% }%>
										</div>
									</div>
				
				
									<div class="comments-area">
										<h4><%= blog.comments.length%> Comment<%= blog.comments.length >1 ? "s": ""%></h4>
										<div class="comment-list">
                                            <% blog.comments.map(comment =>{
                                                let date= `${comment.date}`.split(" ");
                                                %>
											<div class="single-comment ">
												<div class="user ">
													<div class="thumb">
														<img src="/img/users/<%= comment.user[0].image%>" alt="">
													</div>
													<div class="desc">
														<h5><%= comment.user[0].name%></h5>
														<p class="date"> <%= date[2] %> <%= date[1] %>  <%= date[3] %> at <%= date[4].slice(0,-3) %></p>
														<p class="comment">
															<%= comment.comment%>
														</p>
													</div>
												</div>
											</div>
                                            <%})%>
										</div>	                                             				
									</div>
									<div class="comment-form">
										<h4>Leave a Reply</h4>
										<form>
											<div class="form-group form-inline">
											  <div class="form-group name">
												<input type="text" class="form-control" id="name" placeholder="Enter Name" >
											  </div>
											  <div class="form-group  email">
												<input type="email" class="form-control" id="email" placeholder="Enter email address" >
											  </div>										
											</div>
											<div class="form-group">
												<input type="text" class="form-control" id="subject" placeholder="Subject" >
											</div>
											<div class="form-group">
												<textarea class="form-control " rows="5" name="message" placeholder="Messege" required=""></textarea>
											</div>
											<a href="#" class=" submit_btn">Post Comment</a>	
										</form>
									</div>
                                </div>

								
                            </article>
                        </div>
						


                    </div>
                    <%- include('_sidebar.ejs') %>
                </div>
				
            </div>
        </section>
        <!--================Blog Area =================-->
		
		<%- include('_footer')%>