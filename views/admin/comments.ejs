<%- include("_sidebar")%>
<!--================Tables Banner Area =================-->
<section class="tables_banner_area">
    <div class="main_title">
        <button class="navbar-toggler">
            <span class="icon-bar"></span>
            <span class="icon-bar icon-bar-a"></span>
            <span class="icon-bar icon-bar-b"></span>
        </button>
        <span class="main_text">
            <h2>Comments for "<%= blog.title%>"</h2>

        </span>
    </div>
    <div class="main_content">
        <div class="main_table">
            <div class="table_row row_header">
                <div class="table_column">Blog ID</div>
                <div class="table_column">User</div>
                <div class="table_column">Comment</div>
                <div class="table_column">Approved</div>
                <div class="table_column">Date</div>
                <div class="table_column">Modify</div>
            </div>
            <% blog.comments.map(comment =>{
                let date= `${comment.date}`.split(" ");
                %>
            <div class="table_row row_dark">
                <div class="table_column"><%= blog._id%></div>
                <div class="table_column"><%= comment.user[0]?.email%></div>
                <div class="table_column" onclick="readMoreModal('Comment',`<%= comment.comment%>`)">
                    <%= comment.comment.slice(0,20)%>...</div>
                <div class="table_column <%= comment.approve ? 'truthy-rec':'falsy-rec'%>"><%= comment.approve%></div>
                <div class="table_column"><%= date[0] %> <%= date[1] %> <%= date[2] %> <%= date[3] %></div>
                <div class="table_column">
                    <button class="mod_btn update_btn" onclick="approveComment('<%= comment._id%>')"><i
                            class="lnr lnr-checkmark-circle"></i> <%= comment.approve?"Disapprove":"Approve" %></button>
                    <button class="mod_btn delete_btn" onclick="deleteComment('<%= comment._id%>')"><span
                            class="lnr lnr-trash"></span> Delete</button>
                </div>
            </div>

            <%})%>
        </div>
    </div>
    <div class="main_footer">

    </div>

</section>
<!--================Tables Banner Area =================-->
</div>
</div>
<!--================Main Area =================-->


<!--  JavaScript -->
<script src="/js/adminComment.js"></script>
<script src="/js/main-dash.js"></script>
<!--  JavaScript -->
</body>

</html>