<%- include("_sidebar")%>
<!--================Tables Banner Area =================-->
<section class="tables_banner_area">
    <div class="main_title">
        <button class="navbar-toggler">
            <span class="icon-bar"></span>
            <span class="icon-bar icon-bar-a"></span>
            <span class="icon-bar icon-bar-b"></span>
        </button>
        <span class="main_text">
            <h2>Subscribers</h2>

        </span>
    </div>
    <div class="main_content">
        <div class="main_table">
            <div class="table_row row_header">
                <div class="table_column">Image</div>
                <div class="table_column">Name</div>
                <div class="table_column">Email</div>
            </div>
            <% subscribers.map( subscriber =>{
                
                %>
            <div class="table_row row_dark">
                <div class="table_column"><img
                        src="<%= subscriber.image.includes('http') ? subscriber.image : `/img/users/${subscriber.image}` %>"
                        alt=""></div>
                <div class="table_column"><%= subscriber.name%> </div>
                <div class="table_column"><%= subscriber.email%></div>
            </div>
            <% });%>
        </div>
    </div>
    <div class="main_footer">

    </div>

</section>
